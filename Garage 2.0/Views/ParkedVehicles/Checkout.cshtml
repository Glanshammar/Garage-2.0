@model CheckoutViewModel

@{
    ViewData["Title"] = "Checkout Vehicle";
}

<h1>Checkout Vehicle</h1>

<h3>Are you sure you want to check out this vehicle?</h3>
<div>
    <h4>Vehicle Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehicleType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArrivalTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParkedTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParkedTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckoutTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckoutTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParkingSpot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParkingSpot)
        </dd>
    </dl>
    
    <form asp-action="Checkout">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Checkout" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>