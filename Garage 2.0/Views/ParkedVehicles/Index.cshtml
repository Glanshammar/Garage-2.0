@model IEnumerable<Garage_2._0.Models.ViewModels.ParkedVehicleIndexViewModel>

@{
    ViewData["Title"] = "Garage 2.0";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div id="vehicleList" data-current-sort="@ViewData["CurrentSort"]">
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["VehicleTypeSortParm"]">
                    @Html.DisplayNameFor(model => model.VehicleType)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["RegistrationNumberSortParm"]">
                    @Html.DisplayNameFor(model => model.RegistrationNumber)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["WheelsSortParm"]">
                    @Html.DisplayNameFor(model => model.NumberOfWheels)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ArrivalTimeSortParm"]">
                    @Html.DisplayNameFor(model => model.ArrivalTime)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkedTime)
            </th>
                <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfWheels)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkedTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Checkout" asp-route-id="@item.Id" class="btn btn-danger btn-sm delete-vehicle"
                           data-registration="@item.RegistrationNumber">Checkout</a>
            </td>
        </tr>
        }
    </tbody>
</table>