@model Garage_2._0.Models.ViewModels.VehicleSearchViewModel

@{
ViewData["Title"] = "Index";
}

<h1>Garage 2.0</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label asp-for="SearchString" class="control-label">Search by Registration Number</label>
        <input asp-for="SearchString" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SortBy" class="control-label">Sort vehicle</label>
        <select asp-for="SortBy" asp-items="Html.GetEnumSelectList<VehicleType>()" class="form-control">
            <option value="">All Types</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["TypeSortParm"]">@Html.DisplayNameFor(model => model.Vehicles[0].VehicleType)</a>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vehicles[0].RegistrationNumber)
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Vehicles[0].ArrivalTime)</a>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vehicles[0].ParkedTime)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Vehicles) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArrivalTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParkedTime)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Checkout" asp-route-id="@item.Id">Checkout</a>
        </td>
    </tr>
    }
    </tbody>
</table>